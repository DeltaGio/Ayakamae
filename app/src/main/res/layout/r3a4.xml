<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".R3a4"
    android:background="@drawable/fundo_questoes">

    <Button
        android:id="@+id/sair_r3a4"
        android:layout_width="42dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/transparence"
        android:foreground="@drawable/atv_sair"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_black"
        android:text="Questão 3"
        android:textAlignment="center"
        android:textColor="#0193CD"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/sair_r3a4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.40"
        app:layout_constraintStart_toEndOf="@+id/sair_r3a4"
        app:layout_constraintTop_toTopOf="@+id/sair_r3a4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_black"
        android:text="Qual dessas imagens abaixo representa que a Lua está “Minguando”?"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/ok_r3a4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/ok_r3a4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#4CAF50"
        android:text="CONFIRMAR"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="150dp">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <RadioButton
                android:id="@+id/a_r3a4"
                android:layout_width="290dp"
                android:layout_height="200dp"
                android:background="@drawable/lua_a_p2q1"
                android:buttonTint="#FFFFFF"
                android:checked="false"
                android:fontFamily="@font/archivo_black"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                tools:ignore="MissingConstraints" />

            <RadioButton
                android:id="@+id/b_r3a4"
                android:layout_width="290dp"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/lua_b_p2q1"
                android:buttonTint="#FFFFFF"
                android:checked="false"
                android:fontFamily="@font/archivo_black"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                tools:ignore="MissingConstraints" />

            <RadioButton
                android:id="@+id/c_r3a4"
                android:layout_width="290dp"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/lua_c_p2q1"
                android:buttonTint="#FFFFFF"
                android:fontFamily="@font/archivo_black"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

        </RadioGroup>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>