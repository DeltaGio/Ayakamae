<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LayoutPrincipalConjunto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/fprinc_1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/fundo_principal_1"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"/>
        <ImageView
            android:id="@+id/fprinc_2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/fundo_principal_2"
            app:layout_constraintTop_toBottomOf="@+id/fprinc_1"/>
        <ImageView
            android:id="@+id/fprinc_3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/fundo_principal_3"
            app:layout_constraintTop_toBottomOf="@+id/fprinc_2"/>
        <ImageView
            android:id="@+id/fprinc_4"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/fundo_principal_4"
            app:layout_constraintTop_toBottomOf="@+id/fprinc_3"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/TelaModulos"
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

            <ProgressBar
                android:id="@+id/progress_lua"
                style="?android:attr/progressBarStyle"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:indeterminateOnly="false"
                android:progress="0"
                android:progressDrawable="@drawable/circle_progress2"
                app:layout_constraintBottom_toBottomOf="@+id/lua_btprincipal"
                app:layout_constraintEnd_toEndOf="@+id/lua_btprincipal"
                app:layout_constraintStart_toStartOf="@+id/lua_btprincipal"
                app:layout_constraintTop_toTopOf="@+id/lua_btprincipal"
                app:layout_constraintVertical_bias="0.525" />

            <ImageButton
                android:id="@+id/lua_btprincipal"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:layout_marginTop="190dp"
                android:background="@drawable/icone_lua"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:fontFamily="@font/baloo"
                android:text="Lua"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/lua_btprincipal"
                app:layout_constraintStart_toStartOf="@+id/lua_btprincipal"
                app:layout_constraintTop_toBottomOf="@+id/lua_btprincipal" />

            <ProgressBar
                android:id="@+id/progress_const"
                style="?android:attr/progressBarStyle"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:indeterminateOnly="false"
                android:progress="0"
                android:progressDrawable="@drawable/circle_progress2"
                app:layout_constraintBottom_toBottomOf="@+id/constel_btprincipal"
                app:layout_constraintEnd_toEndOf="@+id/constel_btprincipal"
                app:layout_constraintStart_toStartOf="@+id/constel_btprincipal"
                app:layout_constraintTop_toTopOf="@+id/constel_btprincipal"
                app:layout_constraintVertical_bias="0.525" />

            <ImageButton
                android:id="@+id/constel_btprincipal"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="190dp"
                android:background="@drawable/icone_conste"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lua_btprincipal" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Constelações"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/constel_btprincipal"
                app:layout_constraintStart_toStartOf="@+id/constel_btprincipal"
                app:layout_constraintTop_toBottomOf="@+id/constel_btprincipal" />

            <ProgressBar
                android:id="@+id/progress_sol"
                style="?android:attr/progressBarStyle"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:indeterminateOnly="false"
                android:progress="0"
                android:progressDrawable="@drawable/circle_progress2"
                app:layout_constraintBottom_toBottomOf="@+id/sol_btprincipal"
                app:layout_constraintEnd_toEndOf="@+id/sol_btprincipal"
                app:layout_constraintStart_toStartOf="@+id/sol_btprincipal"
                app:layout_constraintTop_toTopOf="@+id/sol_btprincipal"
                app:layout_constraintVertical_bias="0.525" />

            <ImageButton
                android:id="@+id/sol_btprincipal"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:layout_below="@+id/constel_btprincipal"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="190dp"
                android:background="@drawable/icone_sol"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constel_btprincipal" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Sol"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/sol_btprincipal"
                app:layout_constraintStart_toStartOf="@+id/sol_btprincipal"
                app:layout_constraintTop_toBottomOf="@+id/sol_btprincipal" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/menu_grafismo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:layout_marginEnd="120dp">

                <TextView
                    android:id="@+id/reception_user_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivo_black"
                    android:text="Olá, seja bem-vindo"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <TextView
                    android:id="@+id/qtn_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Nenhuma tentativa de 20 questões"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

            </LinearLayout>



            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:indeterminateOnly="false"
                android:progressDrawable="@drawable/circle_progress"
                app:layout_constraintBottom_toBottomOf="parent"
                android:progress="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/perc_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_black"
                android:text="0%"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                app:layout_constraintBottom_toBottomOf="@+id/progress_bar"
                app:layout_constraintEnd_toEndOf="@+id/progress_bar"
                app:layout_constraintStart_toStartOf="@+id/progress_bar"
                app:layout_constraintTop_toTopOf="@+id/progress_bar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>